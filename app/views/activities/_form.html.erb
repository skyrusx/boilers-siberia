<%= form_with model: @activity do |form| %>
  <div class="mb-3">
    <%= form.label :info, class: "form-label" %>
    <%= form.text_field :info, class: "form-control" %>
  </div>

  <div class="col-md-3 mb-3 img-wrapper">
    <%= label_tag "Картинка", nil, class: "form-label" %>

    <div class="mb-4 d-flex justify-content-center">
      <div class="img-thumbnail w-100">
        <%= image_tag(@activity.icon, id: "selected_image") if @activity.icon.attached? %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="btn btn-light">
        <%= form.label :icon, "Выберите файл", class: "form-label" %>
        <%= form.file_field :icon, class: "form-control d-none", onchange: "displaySelectedImage(event, 'selected_image')" %>
      </div>
    </div>
  </div>
  <div>
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>
