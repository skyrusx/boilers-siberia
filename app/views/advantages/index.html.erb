<div>
  <div class="d-flex justify-content-between align-items-center">
    <div class="mb-2 mb-lg-0">
      <h3 class="mb-0 text-white">Рекомендации</h3>
    </div>
    <div>
      <%= link_to "Создать", new_advantage_path, class: "btn btn-light" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">Список</div>
  <div class="card-body">
    <% if @advantages.present? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Заголовок</th>
          <th scope="col">Описание</th>
          <th colspan="2" scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% @advantages.each.with_index(1) do |advantage, index| %>
          <tr>
            <td><%= index %></td>
            <td><%= advantage.title %></td>
            <td><%= advantage.description %></td>
            <td><%= link_to "Редактировать", edit_advantage_path(advantage), class: "btn btn-primary" %></td>
            <td><%= link_to "Удалить", advantage_path(advantage), class: "btn btn-danger", method: :delete, data: { confirm: "Вы уверены?" } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-primary text-center" role="alert">Упс! Данные не найдены.</div>
    <% end %>
  </div>
</div>
