<%= form_with model: @bonus do |form| %>
  <div class="mb-3">
    <%= form.label :text, class: "form-label" %>
    <%= form.text_area :text, rows: 3, class: "form-control" %>
  </div>
  <div class="mb-3 form-check">
    <%= form.check_box :show_text, class: "form-check-input" %>
    <%= form.label :show_text, class: "form-label" %>
  </div>

  <div class="col-md-3 mb-3 img-wrapper">
    <%= label_tag "Баннер", nil, class: "form-label" %>

    <div class="mb-4 d-flex justify-content-center">
      <div class="img-thumbnail w-100">
        <%= image_tag(@bonus.banner, id: "selected_image") if @bonus.banner.attached? %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="btn btn-light">
        <%= form.label :banner, "Выберите файл", class: "form-label" %>
        <%= form.file_field :banner, class: "form-control d-none", onchange: "displaySelectedImage(event, 'selected_image')" %>
      </div>
    </div>
  </div>
  <div>
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>
