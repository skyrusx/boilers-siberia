<%= form_with model: @contact do |form| %>
  <div class="mb-3">
    <%= form.label :region, class: "form-label" %>
    <%= form.text_field :region, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :representative, class: "form-label" %>
    <%= form.text_field :representative, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :phone_other, class: "form-label" %>
    <%= form.text_field :phone_other, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :working_hours_weekdays, class: "form-label" %>
    <%= form.text_field :working_hours_weekdays, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :working_hours_weekends, class: "form-label" %>
    <%= form.text_field :working_hours_weekends, class: "form-control" %>
  </div>
  <div>
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>
