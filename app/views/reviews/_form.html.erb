<%= form_with model: @review do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :text, class: "form-label" %>
    <%= form.text_area :text, rows: 3, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :link, class: "form-label" %>
    <%= form.text_field :link, class: "form-control" %>
  </div>

  <div class="col-md-3 mb-3 img-wrapper">
    <%= label_tag "Аватар", nil, class: "form-label" %>

    <div class="mb-4 d-flex justify-content-center">
      <div class="img-thumbnail w-100">
        <%= image_tag(@review.avatar, id: "selected_image") if @review.avatar.attached? %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="btn btn-light">
        <%= form.label :avatar, "Выберите файл", class: "form-label" %>
        <%= form.file_field :avatar, class: "form-control d-none", onchange: "displaySelectedImage(event, 'selected_image')" %>
      </div>
    </div>
  </div>
  <div>
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>
